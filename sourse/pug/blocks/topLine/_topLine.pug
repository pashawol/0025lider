mixin topLine(b)
	// start topLine
	+b.topLine#topLine&attributes(attributes) 
		.container-fluid
			.row
				.col-xl.col-auto.d-none.d-lg-block
					+e.logo.d-xl-none
						+e.logo-caption.text-secondary(v-html="descr")
					if !b
						.d-none.d-xl-block
							ul
								li(v-for="(menu, index) in menus" :key="menu.title" )
									a(:href="menu.url"  ) {{menu.title}}
					//- else
						
				.col.d-xl-none.text-lg-center.text-sm-left.text-center
					a(href="/")
						img(src="img/@2x/logo.png", alt="")
				.col-auto.d-none.d-sm-block
					+e.A.link--mail(:href="'mailto:'+ email") {{email}}
				.col-auto.d-none.d-sm-block
					+e.A.link--tel(:href="'tel:'+ tel | gettel") {{tel}}
				.col-auto
					.d-none.d-sm-block
						+e.A.btn.btn-primary.link-modal(href="#modal-call" data-title="Заказать звонок" data-btn="Заказать звонок" data-order="Заказать звонок")
							+icon("phone-call") 
					.d-sm-none
						+e.A.btn.btn-primary(:href="'tel:'+ tel | gettel")
							+icon("phone-call") 
							| {{tel}}
						+e.btn.btn-blue.link-modal(href="#modal-call" data-title="Вызвать замерщика" data-btn="Вызвать замерщика" data-order="Вызвать замерщика")
							+icon('builder')
		.d-none
			+soc()
	// end topLine