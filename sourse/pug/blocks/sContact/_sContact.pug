mixin sContact()
	// start sContact
	+b.SECTION.sContact.section#sContact&attributes(attributes)
		.container
			+b.section-title
				+e.top-title(v-html="subT")
				h2
					a(:href="tel0" v-html="h2") 
			.row
				.col-md-6( class="wow fadeInUp "  data-wow-delay=`${delay}s` data-wow-duration=`${dur }s`   )
					+e.map#map
					<script src="https://api-maps.yandex.ru/2.1/?lang=ru_RU" type="text/javascript" ></script>
			 
				.col-md-6 
					+e.caption#sContactbgWrap
						.item-bg.item-bg-animate.p-0#sContactbg
						div( class="wow fadeIn "  data-wow-delay=`${delay + .2}s` data-wow-duration=`${dur }s`   )
							+e.title.item-bg__title(v-html="subT")
							p #[strong Адрес:] {{addr}}


							p  #[strong Режим работы:] {{timer}}
							+e.btn(href="#")
								+icon("pdf")
								| Карточка партнера
	// end sContact